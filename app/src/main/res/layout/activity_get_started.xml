<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_get_started"
    tools:context="apps.ahqmrf.triplem.activity.GetStartedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell us who you are"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:inputType="textAutoComplete"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="Ariful Hoque Maruf" />

        <TextView
            android:id="@+id/warn_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:text="Name is required"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Enter your bio"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="1"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="I am so lonely" />

        <TextView
            android:id="@+id/warn_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:text="Write something about yourself"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:text="Select an image as profile photo"
            android:textSize="14sp" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:src="@drawable/unavailable_photo" />

        <TextView
            android:id="@+id/warn_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="You did not select any photo"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_bg"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>
